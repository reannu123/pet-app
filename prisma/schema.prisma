generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
	relationMode= "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String   @unique
  imageUrl  String
  pets      UserPet[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  birthday  DateTime?
  owner     UserPet[]
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image{
  id        Int      @id @default(autoincrement())
  imageUrl       String
  petId     Int
  pet       Pet      @relation(fields: [petId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([petId])
}

model UserPet {
  id       Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  pet       Pet      @relation(fields: [petId], references: [id])
  petId     Int
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([petId])
}