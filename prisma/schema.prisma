generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
	relationMode= "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String   @unique
  imageUrl  String
  pets      UserPet[]
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  ownerId   Int
  owner     UserPet[]
}

model UserPet {
  id       Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  pet       Pet      @relation(fields: [petId], references: [id])
  petId     Int
  role      String

  @@index([userId])
  @@index([petId])
}